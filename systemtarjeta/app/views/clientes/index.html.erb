<p id="notice"><%= notice %></p>

<div class="jumbotron text-center">
  <h1>SystemCard</h1>
  <p> Enterprise Solutions</p>
</div>

<div class="container">
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">Home</a>
    </div>
    <ul class="nav navbar-nav">
       <li class="name"> 'CongressParticipant'</li>
       <li class="name">'Sesiones'</li>
       <li class="name">'Congresos'</li>
    </ul>
  </div>
</nav>
<table class="table table-striped">

  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellidos</th>
      <th>Telefono</th>
      <th>E-mail</th>
      <th>Fecha Baja</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nombre %></td>
        <td><%= cliente.apellidos %></td>
        <td><%= cliente.telefono %></td>
        <td><%= cliente.email %></td>
        <td><%= cliente.fecha_baja %></td>

        <td><%= link_to 'Ver', cliente %></td>
        <td><%= link_to 'Editar', edit_cliente_path(cliente) %></td>
        <% if cliente.fecha_baja.blank?%>
        <td><%= link_to 'Baja',cliente_bajanormal_path(cliente), data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Cliente', new_cliente_path %>

</div>
